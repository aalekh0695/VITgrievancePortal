<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/signin"
    tools:context="com.example.aalekh.vitgrievanceportal.Signin">

 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="Log In"
     android:textSize="125px"
     android:gravity="center"
     android:layout_centerVertical="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="username"
        android:id="@+id/etUname"
        android:layout_above="@+id/etUpwd"
        android:gravity="center" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        android:inputType="textPassword"
        android:gravity="center"
        android:id="@+id/etUpwd"
        android:layout_above="@+id/SignInB"/>
    <Button
            android:id="@+id/SignInB"
            android:text="Sign In"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowRadius="5"
            android:onClick="signinT"
            android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
           android:layout_alignParentBottom="true"
            />




</RelativeLayout>
